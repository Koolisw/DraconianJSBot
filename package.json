{
  "private": true,
  "name": "draconian",
  "version": "2.1.0",
  "description": "Multi-Purpose & Productivity concentrated Discord BOT.",
  "license": "MIT",
  "author": "ckt1031",
  "main": "src/index.ts",
  "engines": {
    "node": ">=16.9.0",
    "npm": ">=7"
  },
  "type": "module",
  "scripts": {
    "clean": "rimraf ./dist",
    "dev": "nodemon",
    "lint": "tsc && eslint --fix .",
    "format": "prettier -w .",
    "typecheck": "tsc",
    "start": "cross-env NODE_ENV=production node --loader @esbuild-kit/esm-loader src/index.ts",
    "sync": "node --loader @esbuild-kit/esm-loader tools/copy-config.ts"
  },
  "dependencies": {
    "@discordjs/builders": "1.4.0",
    "@discordjs/rest": "1.5.0",
    "@esbuild-kit/esm-loader": "^2.5.4",
    "@vitalets/google-translate-api": "9.0.0",
    "axios": "1.2.2",
    "canvas": "2.10.2",
    "chalk": "5.2.0",
    "cross-env": "7.0.3",
    "crypto-js": "4.1.1",
    "dayjs": "1.11.7",
    "deepmerge": "^4.3.0",
    "discord-api-types": "0.37.25",
    "discord.js": "14.7.1",
    "dotenv": "16.0.3",
    "fastify": "4.10.2",
    "gifencoder": "2.0.1",
    "glob": "8.0.3",
    "mongoose": "6.8.2",
    "ms": "2.1.3",
    "node-cache": "5.1.2",
    "pidusage": "3.0.2",
    "string-similarity": "4.0.4",
    "urban-dictionary": "3.0.2",
    "xml2js": "0.4.23"
  },
  "devDependencies": {
    "@types/crypto-js": "4.1.1",
    "@types/deepmerge": "^2.2.0",
    "@types/gifencoder": "2.0.1",
    "@types/glob": "8.0.0",
    "@types/ms": "0.7.31",
    "@types/node": "18.11.18",
    "@types/pidusage": "2.0.2",
    "@types/string-similarity": "4.0.0",
    "@types/urban-dictionary": "3.0.0",
    "@types/xml2js": "0.4.11",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "eslint": "8.31.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "nodemon": "2.0.20",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "typescript": "4.9.4"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "delay": 2500,
    "ignore": [
      "dist",
      "temp",
      "node_modules"
    ],
    "exec": "node --loader @esbuild-kit/esm-loader --inspect src/index.ts"
  }
}
